{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Backend API for Suites (Auth + Subscriptions w/ Stripe)",
  "main": "server/index.js",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.17.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "jobs": "node jobs/reportUsage.js",
    "db:sync": "node scripts/dbSync.js",
    "db:sync:force": "node scripts/dbSync.js --force",
    "db:sync:alter": "node scripts/dbSync.js --alter",
    "seed:salestrack": "node seed/seedSalestrack.js",
    "seed:multitools": "node seed/seedMultiTools.js",
    "health": "node -e \"require('http').get('http://localhost:'+(process.env.PORT||3001)+'/api/health',r=>r.on('data',d=>process.stdout.write(d)))\""
  },
  "dependencies": {
    "@suites/database-models": "1.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "sequelize": "^6.37.3",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "js,json",
    "ignore": [
      "server/seed/*.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}
